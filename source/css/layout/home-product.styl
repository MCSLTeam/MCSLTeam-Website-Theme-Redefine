@import '../common/variables'

.home-product-intro
  margin-top $spacing-unit - 20px
  margin-left 30px
  margin-right 30px
  padding-bottom 20px
  border-radius $redefine-border-radius-large
  position relative
  box-shadow var(--redefine-box-shadow)
  backdrop-filter blur(10px)
  -webkit-backdrop-filter blur(10px)
  background-color var(--background-color-transparent-80) !important

  .product-intro-title
    font-size 30px
    color var(--second-text-color)
    padding-left 30px
    color var(--second-text-color)
    font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif

  .product-intro-content
    display flex
    flex-direction column
    padding 10px 30px 30px 30px
    justify-content center
    color var(--third-text-color)
    font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif


.home-product-container
  margin-left 30px
  margin-right 30px
  border-radius $redefine-border-radius-large
  if (hexo-config('home.sidebar.enable') && hexo-config('home.sidebar.position') == 'right')
    margin-left $spacing-unit

    +redefine-tablet()
      margin-left 0

    +redefine-mobile()
      margin-left 0

  if (hexo-config('home.sidebar.enable') && hexo-config('home.sidebar.position') == 'left')
    margin-right $spacing-unit

    +redefine-tablet()
      margin-right 0

    +redefine-mobile()
      margin-right 0

  .seo-reader-text
    border 0
    clip rect(1px, 1px, 1px, 1px)
    -webkit-clip-path inset(50%)
    clip-path inset(50%)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute !important
    width 1px
    word-wrap normal !important
    word-break normal

  .home-product-list
    .home-product-item
      border-radius $redefine-border-radius-large
      backdrop-filter blur(10px)
      -webkit-backdrop-filter blur(10px)
      position relative
      text-align left
      display flex
      redefine-container(
        true,
        1.015,
        1.015,
        0px,
        28px
      )
    
      .home-product-thumbnail img
        width 50%
        height 50%
        object-position left
        border-radius $redefine-border-radius-large
        display flex
        justify-content center
        align-items center
        overflow hidden
        margin-bottom 18px
        margin-left 18px
        margin-top 18px

        +redefine-tablet()
          width 60%
          height 60%

        +redefine-mobile()
          width 70%
          height 70%
      
      .home-product-thumbnail
        width 80%
        height 100%
        display flex
        overflow hidden
        align-items center
      
      .text-container
        vertical-align center
        margin-bottom 30px
        margin-right 30px
        margin-top 30px
        flex-direction column
        width 80%
        height 100%
        display flex
        justify-content flex-start
        overflow hidden
        align-items left

      .home-product-title
        align-content left
        position relative
        font-weight 700
        font-size 1.4rem
        line-height 1.5
        color var(--second-text-color)
        font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif
    
        +redefine-tablet()
          font-size 1.3rem
    
        +redefine-mobile()
          font-size 1.2rem
    
        margin 0
    
      .home-product-content
        flex-grow 1
        align-content left
        overflow hidden
        text-overflow ellipsis
        color var(--default-text-color)
    
      .home-product-meta-info-container
        display flex
        justify-content space-between
        align-items center
        font-size 0.92rem
        color var(--third-text-color)
    
        .home-product-meta-info
          letter-spacing 0.5px
    
          span
            margin-right 10px
    
            &:last-child
              margin-right 0
    
            ul, li
              display inline
    
          .home-product-category
            +redefine-mobile()
              display none
    
          .home-product-tag
            +redefine-tablet()
              display none
    
        hr
          border none
          flex 1
          height 1px
          background var(--border-color)
          margin 0 10px
    
        a
          color var(--third-text-color)
    
          &:hover
            color var(--primary-color)