@import '../common/variables'

.home-product-intro
  margin-top $spacing-unit - 20px
  margin-left 30px
  margin-right 30px
  padding-bottom 30px
  border-radius $redefine-border-radius-large
  position relative
  box-shadow var(--redefine-box-shadow)
  backdrop-filter blur(10px)
  -webkit-backdrop-filter blur(10px)
  background-color var(--background-color-transparent-80) !important

  .product-intro-title
    font-size 30px
    color var(--second-text-color)
    padding-left 30px
    color var(--second-text-color)
    font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif

  .product-intro-content
    display flex
    flex-direction column
    padding 10px 30px 30px 30px
    justify-content center
    color var(--third-text-color)
    font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif


.home-product-container
  +redefine-tablet()
    flex-direction column

  +redefine-mobile()
    flex-direction column

  display flex
  flex-direction row
  justify-content space-between
  align-content space-between
  margin-left 30px
  margin-right 30px
  border-radius $redefine-border-radius-large
  if (hexo-config('home.sidebar.enable') && hexo-config('home.sidebar.position') == 'right')
    margin-left $spacing-unit

    +redefine-tablet()
      margin-left 0

    +redefine-mobile()
      margin-left 0

  if (hexo-config('home.sidebar.enable') && hexo-config('home.sidebar.position') == 'left')
    margin-right $spacing-unit

    +redefine-tablet()
      margin-right 0

    +redefine-mobile()
      margin-right 0

  .seo-reader-text
    border 0
    clip rect(1px, 1px, 1px, 1px)
    -webkit-clip-path inset(50%)
    clip-path inset(50%)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute !important
    width 1px
    word-wrap normal !important
    word-break normal

  .home-product-selector
    display flex
    flex-direction column
    flex-shrink 0

    .home-product-selector-item
      background var(--background-color-transparent-80)
      border-radius $redefine-border-radius-small
      display flex
      align-content left
      align-items left
      padding 3px
      margin-bottom 10px

      .product-icon
        flex-shrink 0
        width 50px
        height 50px

      .product-name
        user-select none
        width auto
        font-size 1.2rem
        color var(--third-text-color)
        align-content center
        margin-left 15px
        margin-right 15px
        transition color 0.5s ease-in-out

  .home-product-view
    margin-left $spacing-unit

    +redefine-tablet()
      margin-left 0
      margin-right 0

    +redefine-mobile()
      margin-left 0
      margin-right 0

    .product-image
      margin-right 5px
      margin-top 13px
      border-radius $redefine-border-radius-medium
      transition opacity 0.5s ease-in-out
      width 100%
      height auto

    .product-title
      transition opacity 0.5s ease-in-out
      align-content left
      position relative
      font-weight 700
      font-size 1.4rem
      line-height 1.5
      color var(--second-text-color)
      font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif

      +redefine-tablet()
        font-size 1.3rem

      +redefine-mobile()
        font-size 1.2rem

      margin 0
      a
        color var(--third-text-color)

        &:hover
          color var(--primary-color)

    .product-description
      margin-top 10px
      font-size 1.2rem
      color var(--third-text-color)
      position relative
      transition opacity 0.5s ease-in-out
      flex-grow 1
      align-content left
      overflow hidden
      text-overflow ellipsis
      color var(--default-text-color)
      display flex
      justify-content space-between

      hr
        border none
        flex 1
        height 1px
        background var(--border-color)
        margin 0 10px

      a
        color var(--third-text-color)

        &:hover
          color var(--primary-color)