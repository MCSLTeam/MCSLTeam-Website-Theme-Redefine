@import '../common/variables'

.home-self-intro
  margin-left 30px
  margin-right 30px
  border-radius $redefine-border-radius-large
  position relative
  box-shadow var(--redefine-box-shadow)
  backdrop-filter blur(10px)
  -webkit-backdrop-filter blur(10px)
  background-color var(--background-color-transparent-80) !important

  .home-intro-title
    font-size 30px
    color var(--second-text-color)
    padding-left 30px
    padding-top 5px
    color var(--second-text-color)
    font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif

  .home-intro-content
    display flex
    flex-direction column
    padding 10px 30px 30px 30px
    justify-content center
    overflow auto
    color var(--third-text-color)
    font-family $english-font-family, $chinese-font-family, 'Noto Sans SC', sans-serif

  .scroll-container
    position relative
    width 100%
    display flex
    align-items center
    justify-content center

  .scroll-button
    z-index 2
    position absolute
    top 50%
    transform translateY(-50%)
    color var(--second-text-color)
    border none
    cursor pointer
    padding 35px

  .scroll-button-left
    padding-right 30px
    left 0

  .scroll-button-right
    padding-left 30px
    right 0

  .members
    z-index 1
    margin-left 50px
    margin-right 50px
    padding-bottom 70px
    display flex
    width 95%
    overflow auto
    scrollbar-width none
    &::-webkit-scrollbar
      display none

  .member
    flex 0 0 auto
    width 200px
    height 200px
    padding-right 25px
    position relative

  .member-image
    width 170px
    height 170px
    overflow hidden
    position relative
    border-radius $redefine-border-radius-large

  .member-image img
    width 170px
    height 170px
    object-fit cover

  .member-image::after
    content ''
    position absolute
    top 70%
    left 0
    width 170px
    height 50%
    background linear-gradient(transparent, lighten($default-text-color, 50%))

  .member-name
    font-weight bold
    padding-top 8px
    text-align center
    color var(--second-text-color)

  .member-role
    padding-top 5px
    text-align center
    color var(--second-text-color)